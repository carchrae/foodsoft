%section
  %h2= t '.title'
  - if ordergroup.not_enough_apples?
    .alert
      = t '.not_enough_apples'
  - unless Order.open.empty?
    %table.table
      %thead
        %tr
          %th= heading_helper Order, :name
          %th= heading_helper Order, :pickup
          %th= heading_helper Order, :ends
          %th= t '.who_ordered'
          %th.numeric= heading_helper GroupOrder, :price
      %tbody
        - total = 0
        - Order.open.each do |order|
          %tr
            %td
              = link_to_ordering(order)
            %td= format_date(order.pickup) unless order.pickup.nil?
            %td= format_time(order.ends) unless order.ends.nil?
            - if group_order = order.group_order(ordergroup)
              - total += group_order.price
              %td= "#{show_user group_order.updated_by} (#{format_time(group_order.updated_on)})"
              %td.numeric
                = link_to_ordering(order, show: true) do
                  = number_to_currency(group_order.price)
            - else
              %td{:colspan => 2}
          %tr
            %td(colspan=5)
              %div.row-fluid
                - if order.note
                  .span= order.note.gsub(URI::DEFAULT_PARSER.make_regexp(['http','https']), '<a href="\0">\0</a>').html_safe
              %div.row-fluid
                - count = order.order_articles.ordered.count
                - cases = order.order_articles.ordered.sum(:units_to_order)
                .badge.info= "#{count} #{'item'.pluralize{count}} filled"
                .badge.info= "#{count} #{'case'.pluralize{cases}} ordered"
                - order_sum = order.supplier.sum_on_pickup_date(order.pickup, :gross)
                .badge.info= "#{order.supplier.name} total #{number_to_currency(order_sum)}"
                - min_order_value = order.supplier.min_order_quantity.sub('$','').to_f
                - if min_order_value > 0
                  - if order_sum.to_f > min_order_value
                    .badge.badge-success= "minimum met"
                  - else
                    - order_value_needed = min_order_value - order_sum
                    .badge.badge-warning= "#{number_to_currency(order_value_needed)} more to meet minimum"

      - if total > 0
        %tfooter
          %tr
            %th(colspan=3)
            %th= t('.total_sum') + ':'
            %th.numeric= number_to_currency(total)
  - else
    %i= t '.no_open_orders'
